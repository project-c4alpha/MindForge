{
  "name": "java-unit-test",
  "version": "1.0.0",
  "description": "Professional Java unit testing agent for Claude Code",
  "language": "java",
  "language_version": "8",
  "frameworks": {
    "build_tool": "gradle",
    "test_framework": "junit",
    "test_framework_version": "4.13.2",
    "mock_framework": "mockito",
    "mock_framework_version": "3.12.4",
    "assertion_library": "assertj",
    "assertion_library_version": "3.23.1"
  },
  "capabilities": [
    "unit_test_generation",
    "test_case_design",
    "mock_object_creation",
    "assertion_generation",
    "test_naming_convention",
    "exception_testing",
    "boundary_testing",
    "code_coverage_optimization"
  ],
  "conventions": {
    "naming_pattern": "given_when_then",
    "test_structure": "AAA (Arrange-Act-Assert)",
    "test_class_suffix": "Test",
    "mock_annotation": "@Mock",
    "inject_annotation": "@InjectMocks"
  },
  "best_practices": [
    "Single responsibility per test method",
    "Independent and repeatable tests",
    "Meaningful test data",
    "Mock external dependencies",
    "Verify mock interactions",
    "Use fluent assertions",
    "Test public interfaces only",
    "Keep tests simple and readable"
  ],
  "coverage_targets": {
    "line_coverage": 80,
    "branch_coverage": 70,
    "method_coverage": 90
  },
  "test_categories": [
    "happy_path",
    "edge_cases",
    "exception_handling",
    "null_safety",
    "boundary_conditions",
    "collection_operations",
    "optional_handling"
  ]
}
