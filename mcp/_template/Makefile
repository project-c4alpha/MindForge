.DEFAULT_GOAL := help
.PHONY: help build test clean fmt lint

help:
	@echo "Service template"
	@echo ""
	@echo "Implement these targets for your service:"
	@echo "  make build"
	@echo "  make test"
	@echo "  make clean"
	@echo ""
	@echo "Optional:"
	@echo "  make fmt"
	@echo "  make lint"

build:
	@echo "TODO: implement build for this service"
	@exit 2

test:
	@echo "TODO: implement tests for this service (or make it a no-op)"
	@exit 2

clean:
	@echo "TODO: implement clean for this service"
	@exit 2

fmt:
	@echo "TODO: implement fmt for this service"
	@exit 2

lint:
	@echo "TODO: implement lint for this service"
	@exit 2

